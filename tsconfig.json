{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "common/*": ["src/common/*"],
      "Ipc": ["src/electron/Ipc.ts", "src/web/Ipc.ts"]
    }
  }
}
