{
  "name": "lyricistant",
  "productName": "Lyricistant",
  "displayName": "Lyricistant",
  "version": "0.0.4",
  "license": "GPL-3.0-or-later",
  "description": "An app that helps you to write the lyrics you want to!",
  "author": {
    "name": "Wardell Bagby",
    "email": "dev@wardellbagby.com"
  },
  "repository": {
    "type": "git",
    "url": "git://https://github.com/wardellbagby/rhymer.git"
  },
  "homepage": "https://github.com/wardellbagby/rhymer",
  "sideEffects": false,
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "config/electron/renderer.webpack.config.js"
    },
    "main": {
      "sourceDirectory": "src/electron",
      "webpackConfig": "config/electron/main.webpack.config.js"
    },
    "whiteListedModules": [
      "react-monaco-editor",
      "react-virtuoso",
      "@material-ui/core",
      "@material-ui/icons",
      "typeface-roboto"
    ]
  },
  "scripts": {
    "build": "electron-webpack",
    "build-web": "webpack --config config/web/prod.webpack.config.js",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "electron-webpack dev",
    "start-web": "webpack-dev-server --open --config config/web/dev.webpack.config.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder --win --mac --linux",
    "ui-test": "ts-mocha -p tsconfig.json \"test/ui/**/*.ts\""
  },
  "build": {
    "appId": "com.wardellbagby.lyricistant",
    "artifactName": "${name}-${version}-${os}_${arch}.${ext}",
    "directories": {
      "output": "dist/electron-app"
    },
    "files": [
      {
        "from": "dist/electron/main"
      },
      {
        "from": "dist/electron/renderer"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">= 12.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "compression-webpack-plugin": "^3.1.0",
    "electron": "^8.0.0",
    "electron-builder": "^22.2.0",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^3.2.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "monaco-editor-webpack-plugin": "^1.8.2",
    "prettier": "1.19.1",
    "spectron": "^10.0.1",
    "terser-webpack-plugin": "^3.0.1",
    "ts-mocha": "^7.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.1.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.39",
    "datamuse": "^1.0.5",
    "electron-debug": "^3.0.1",
    "monaco-editor": "^0.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-monaco-editor": "^0.33.0",
    "react-toastify": "^5.5.0",
    "react-virtuoso": "^0.13.1",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.16",
    "syllable": "^4.0.0",
    "tslint": "^5.20.1",
    "typeface-roboto": "0.0.75",
    "typescript": "^3.7.2"
  }
}
