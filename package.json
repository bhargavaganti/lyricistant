{
  "name": "lyricistant",
  "productName": "Lyricistant",
  "displayName": "Lyricistant",
  "version": "0.0.4",
  "license": "GPL-3.0-or-later",
  "description": "An app that helps you to write the lyrics you want to!",
  "author": {
    "name": "Wardell Bagby",
    "email": "dev@wardellbagby.com"
  },
  "repository": {
    "type": "git",
    "url": "git://https://github.com/wardellbagby/rhymer.git"
  },
  "homepage": "https://github.com/wardellbagby/rhymer",
  "sideEffects": false,
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "config/electron/renderer.webpack.config.ts"
    },
    "main": {
      "sourceDirectory": "src/electron",
      "webpackConfig": "config/electron/main.webpack.config.ts"
    },
    "whiteListedModules": [
      "react-monaco-editor",
      "react-virtuoso",
      "@material-ui/core",
      "@material-ui/icons",
      "typeface-roboto"
    ]
  },
  "scripts": {
    "build": "electron-webpack -r ts-node/register -r tsconfig-paths/register",
    "build-web": "webpack -r tsconfig-paths/register --config config/web/prod.webpack.config.ts",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "cross-env NODE_OPTIONS='-r ts-node/register -r tsconfig-paths/register' electron-webpack dev --progress",
    "start-web": "webpack-dev-server -r tsconfig-paths/register --open --config config/web/dev.webpack.config.ts",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder --win --mac --linux",
    "ui-test": "ts-mocha -p tsconfig.json \"test/ui/**/*.ts\""
  },
  "build": {
    "appId": "com.wardellbagby.lyricistant",
    "artifactName": "${name}-${version}-${os}_${arch}.${ext}",
    "directories": {
      "output": "dist/electron-app"
    },
    "files": [
      {
        "from": "dist/electron/main"
      },
      {
        "from": "dist/electron/renderer"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">= 12.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.54",
    "@types/prettier": "^2.0.2",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack-dev-server": "^3.11.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "compression-webpack-plugin": "^3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^3.2.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "prettier": "1.19.1",
    "spectron": "^11.1.0",
    "terser-webpack-plugin": "^3.1.0",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "browser-nativefs": "^0.10.2",
    "datamuse": "^1.0.5",
    "electron-debug": "^3.1.0",
    "monaco-editor": "^0.19.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-monaco-editor": "^0.33.0",
    "react-toastify": "^5.5.0",
    "react-virtuoso": "^0.13.5",
    "rxjs": "^6.6.2",
    "source-map-support": "^0.5.19",
    "syllable": "^4.1.0",
    "typeface-roboto": "0.0.75"
  }
}
