{
  "name": "lyricistant",
  "productName": "Lyricistant",
  "displayName": "Lyricistant",
  "version": "0.0.4",
  "license": "GPL-3.0-or-later",
  "description": "An app that helps you to write the lyrics you want to!",
  "author": {
    "name": "Wardell Bagby",
    "email": "dev@wardellbagby.com"
  },
  "repository": {
    "type": "git",
    "url": "git://https://github.com/wardellbagby/rhymer.git"
  },
  "homepage": "https://github.com/wardellbagby/rhymer",
  "sideEffects": false,
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "config/electron/renderer.webpack.config.ts"
    },
    "main": {
      "sourceDirectory": "src/electron",
      "webpackConfig": "config/electron/main.webpack.config.ts"
    },
    "whiteListedModules": [
      "react-monaco-editor",
      "react-virtuoso",
      "@material-ui/core",
      "@material-ui/icons",
      "typeface-roboto",
      "react-beforeunload",
      "notistack",
      "use-debounce"
    ]
  },
  "scripts": {
    "build": "cross-env TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" electron-webpack -r ts-node/register",
    "build-web": "cross-env TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" webpack --config config/web/prod.webpack.config.ts",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "cross-env NODE_OPTIONS='-r ts-node/register ' TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" electron-webpack dev --progress",
    "start-web": "cross-env TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" webpack-dev-server --open --config config/web/dev.webpack.config.ts",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --config electron-builder.json",
    "dist-all": "electron-builder -mwl --config electron-builder.json",
    "build-and-test": "npm run build && npm run build-web && electron-builder --mac && npm run test",
    "test": "ts-mocha -r tsconfig-paths/register -p config/tsconfig-for-webpack-config.json",
    "test-build": "cross-env NODE_ENV='test' TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" electron-webpack -r ts-node/register --env.production=false",
    "test-dist": "cross-env NODE_ENV='test' electron-builder --mac",
    "test-build-web": "cross-env NODE_ENV='test' TS_NODE_PROJECT=\"config/tsconfig-for-webpack-config.json\" webpack --config config/web/dev.webpack.config.ts",
    "postinstall": "ts-node-script bin/fix-electron-webpack.ts"
  },
  "engines": {
    "node": ">= 12.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix"
    }
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-subset": "^1.3.3",
    "@types/compression-webpack-plugin": "^4.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.54",
    "@types/prettier": "^2.0.2",
    "@types/react": "^16.9.45",
    "@types/react-beforeunload": "^2.1.0",
    "@types/react-dom": "^16.9.8",
    "@types/sinon": "^9.0.5",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-merge": "^4.1.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "compression-webpack-plugin": "^6.0.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^3.2.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "prettier": "1.19.1",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "spectron": "^11.1.0",
    "terser-webpack-plugin": "^3.1.0",
    "ts-mocha": "^7.0.0",
    "ts-mock-imports": "^1.3.0",
    "ts-node": "^8.10.2",
    "ts-sinon": "^2.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "browser-nativefs": "^0.10.2",
    "datamuse": "^1.0.5",
    "electron-debug": "^3.1.0",
    "electron-log": "^4.2.4",
    "mdi-material-ui": "^6.18.0",
    "monaco-editor": "^0.19.3",
    "notistack": "^1.0.0",
    "react": "^16.13.1",
    "react-beforeunload": "^2.2.4",
    "react-dom": "^16.13.1",
    "react-monaco-editor": "^0.33.0",
    "react-virtuoso": "^0.13.5",
    "rxjs": "^6.6.2",
    "source-map-support": "^0.5.19",
    "syllable": "^4.1.0",
    "typeface-roboto": "0.0.75",
    "use-debounce": "^4.0.0"
  }
}
